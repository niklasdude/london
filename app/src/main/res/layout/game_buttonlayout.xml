<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="2"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <LinearLayout
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#000"
        android:layout_width="250dp"
        android:layout_height="50dp">

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="24dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rounded_corncers_red_border_layout"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/less_btn"
            android:textColor="@color/reddy"
            android:drawableLeft="@drawable/ic_arrowdown_red"
            android:textStyle="bold"
            android:text="LESS"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:textSize="24dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rounded_corncers_red_border_layout"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/more_btn"
            android:textColor="@color/greeny"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_arrow_up_green"
            android:textStyle="bold"
            android:text="MORE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>