<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".EndCardActivity">
    <include layout="@layout/endcard_statusbar"></include>

    <FrameLayout
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/endcard_maincontent"></include>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frameStartGame"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/summit_newgame">
        </include>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frameKeepGoing"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/summit_keepgoing">
        </include>
    </FrameLayout>




</LinearLayout>