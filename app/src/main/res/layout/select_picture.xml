<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Select your picture:"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="(red underbar is selected)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:weightSum="2"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <FrameLayout
            android:layout_marginRight="2dp"
            android:id="@+id/picture_one"
            android:background="#5b7296"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </FrameLayout>
        <FrameLayout
            android:layout_marginLeft="2dp"
            android:id="@+id/picture_two"
            android:background="#965b5d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp">
        <FrameLayout
            android:background="#888"
            android:layout_marginRight="2dp"
            android:id="@+id/colorbox_one"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></FrameLayout>
        <FrameLayout
            android:background="#888"
            android:layout_marginLeft="2dp"
            android:id="@+id/colorbox_two"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
</LinearLayout>